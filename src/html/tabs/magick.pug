    .flex-row
      .column.fit-size
        button.spell_button(type='roll' name='roll_spell' value='&{template:skillzRoll} {{name=@{character_name}}} {{skillvalue=[[(@{Unsanity})]]}} {{fumble=[[ceil(95+([[(@{Unsanity})]])/20))]]}} {{crit=[[ceil(([[(@{Unsanity})]])/20)+1]]}} {{special=[[ceil(([[(@{Unsanity})]])/5)+1]]}}         {{success=[[(@{Unsanity})]]}} {{roll=[[1d100]]}} {{skillname=@{spellname}}}')
      .column.removeSides
        .label
          input.input.min-input.shaded-input(type='text' name='attr_spellname')
      .column.removeSides
        .label
          input.input.min-input.shaded-input(type='text' name='attr_spellcost')
      .column.removeSides
        .label
          input.input.min-input.shaded-input(type='text' name='attr_spelltype')
      .column.removeSides
        .label
          input.input.min-input.shaded-input(type='text' name='attr_spelldamage')
