.magick
  h1.skillHeading Magick
  .flex-row
    .column.fit-size
      h3.center-txt Roll
    .column.removeSides
      h3.center-txt Spell Name
    .column.removeSides
      h3.center-txt Cost
    .column.removeSides
      h3.center-txt Type
    .column.removeSides
      h3.center-txt Damage
